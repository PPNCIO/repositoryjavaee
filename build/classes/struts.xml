<struts>
        <package name="default" extends="struts-default">
            <action name="alta" class="org.action.producto.ActionProducto" method="add">
            <result name="input">/moduloProductojsp</result>
                <result name="success" type="redirect">consulta</result>
                </action>
                 <action name="baja" class="org.action.producto.ActionProducto" method="delete">
                <result name="success" type="redirect">consulta</result>
                </action>
                 <action name="consulta" class="org.action.producto.ActionProducto" method="list">
                <result name="success">/moduloProducto.jsp</result>
                </action>
            <action name="editar" class="org.action.producto.ActionProducto" method="edit">
                <result name="success">/moduloProducto.jsp</result>
            </action>
        </package>
</struts>
        